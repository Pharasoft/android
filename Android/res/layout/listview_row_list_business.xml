<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_spacing_margin"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView_business_listview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/business_img"
        android:contentDescription="@string/business_infomation" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="vertical" >

        <CheckedTextView
            android:id="@+id/textView_business_name_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector_background"
            android:drawableRight="@drawable/ic_action_play"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_business_address_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_business_review_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        
    </LinearLayout>

</LinearLayout>